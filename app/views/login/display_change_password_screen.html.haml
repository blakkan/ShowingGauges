%h2
  Change Password
=form_tag '/change_password_result', method: 'get' do

  %div.row
    %div.col-md-6
      %label{ for: :user_password_id }
        %h3
          New Password
      =password_field_tag :user_password, nil, id: "user_password_id", class: 'form-control input-sm'
    %div.col-md-6
  %br
  %div.row
    %div.col-md-6
      %label{ for: :user_password2_id }
        %h3
          Repeat New Password
      =password_field_tag :user_password2, nil, id: "user_password2_id", class: 'form-control input-sm'
    %div.col-md-6
  %br
  %br
  %div.row
    %div.col-md-2
      =submit_tag 'Submit', id: "submit_btn_id", class: 'btn btn-primary'
    %div.col-md-10
