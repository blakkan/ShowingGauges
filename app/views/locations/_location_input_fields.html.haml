%div.row
  %div.col-md-3
    %label{for: :location_string_id}
      %h3
        Location Name
    =text_field_tag :location_string, @pre_pop_location, id: :location_string_id, class: 'form-control input-sm'

  %div.col-md-7
    %label{for: :comment_string_id}
      %h3
        Comment
    =text_field_tag :location_comment_string, @pre_pop_comment, id: :location_comment_string_id, class: 'form-control input-sm'

  %div.col-md-2
    %label{for: :is_retired_string_id}
      %h3
        Is Retired?
    =check_box_tag :location_is_retired_string, nil, @pre_pop_is_retired, id: :location_is_retired_string_id, class: 'form-control input-sm'
